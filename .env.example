# OpenAI API Key - Get yours from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key - Get yours from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# LLM Provider (openai or groq)
LLM_PROVIDER=openai

# Model Configuration
# For OpenAI: gpt-4, gpt-3.5-turbo, etc.
# For Groq: mixtral-8x7b-32768, llama3-8b-8192, etc.
LLM_MODEL=gpt-4

# Optional: Set temperature for model responses (0.0 to 1.0, default: 0.3)
LLM_TEMPERATURE=0.3

# Optional: Set maximum token length for responses (default: 2000)
MAX_TOKENS=2000
